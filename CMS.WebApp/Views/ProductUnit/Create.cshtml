@using CMS.Models.Supermarket.ProductUnits;
@using CMS.Utilities.Helpers
@model ProductUnitCreateRequest
@{
    ViewData["Title"] = "Create ProductUnit";
    Layout = "~/Views/Shared/_LayoutConfirm.cshtml";
}

<main class="main card-bg" id="top">
    <div class="container-fluid" data-layout="container-fluid">
        <div class="content pb-2">
            <form asp-action="create" method="post" enctype="multipart/form-data" class="col-12">
                @if (!string.IsNullOrEmpty(ViewBag.Error))
                {
                    <div class="alert alert-danger pt-2 pb-2 mt-1 mb-2" role="alert">
                        @ViewBag.Error
                    </div>
                }
                else if (!string.IsNullOrEmpty(ViewBag.Message))
                {
                    if (ViewBag.Message.Equals(ConstantHelper.UpdateSuccess)
                    || ViewBag.Message.Equals(ConstantHelper.InsertSuccess)
                    || ViewBag.Message.Equals(ConstantHelper.DeleteSuccess))
                    {
                        <script type="text/javascript">
                            window.parent.closeDialog(true);
                        </script>
                    }
                    else
                    {
                        <div class="alert alert-success pt-2 pb-2 mt-1 mb-2" role="alert">
                            @ViewBag.Message
                        </div>
                    }
                }
                <div class="mb-2">
                    <label for="ProductID">Sản phẩm</label>
                    <select asp-for="ProductID" class="form-control" asp-items="ViewBag.Products">
                        <option value="">-- Chọn sản phẩm --</option>
                    </select>
                    <span asp-validation-for="ProductID" class="text-danger"></span>
                    <span asp-validation-for="ProductID" class="text-danger"></span>
                </div>
                <div class="mb-2 mt-1">
                    <label asp-for="UnitName" class="control-label"></label>
                    <input asp-for="UnitName" class="form-control" type="text" placeholder="" />
                    <span asp-validation-for="UnitName" class="text-danger"></span>
                </div>
                <div class="mb-2">
                    <label asp-for="ConversionRate" class="control-label"></label>
                    <input asp-for="ConversionRate" class="form-control" placeholder="" />
                    <span asp-validation-for="ConversionRate" class="text-danger"></span>
                </div>
                <div class="mb-2">
                    <label asp-for="UnitPrice" class="control-label"></label>
                    <input asp-for="UnitPrice" class="form-control" placeholder="" />
                    <span asp-validation-for="UnitPrice" class="text-danger"></span>
                </div>
                <div class="mb-2 form-check">
                    <input asp-for="IsBaseUnit" type="checkbox" class="form-check-input" />
                    <label asp-for="IsBaseUnit" class="form-check-label"></label>
                    <span asp-validation-for="IsBaseUnit" class="text-danger"></span>
                </div>
               
               
                <div class="mt-5"></div>
                <div class="row position-fixed bottom-0 bg-light w-100 pt-2">
                    <div class="col d-flex justify-content-end align-items-center p-0 pe-3">
                        <input type="button" value="Hủy" onclick="return onCancel_Click();" class="col-auto btn btn-danger" style="margin-left:10px !important; padding-left:30px; padding-right:30px;" />
                        <input type="submit" value="Thêm" class="col-auto btn btn-primary ms-2" style="margin-left:10px !important; padding-left:30px; padding-right:30px;" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</main>